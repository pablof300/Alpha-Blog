<%= render 'shared/errors', obj:@user %>

<div class="articles-form">
  <%= form_for @user do |f| %>
    <div class="form-group row">
      <%= f.label :username, class:"col-sm-2 col-form-label" %><br />
      <div class="col-sm-10">
        <%= f.text_field :username, placeholder: "Enter username", autofocus: true, class: "form-control", type: "text"%>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :email, class:"col-sm-2 col-form-label" %><br />
      <div class="col-sm-10">
        <%= f.email_field :email, placeholder: "Enter email", class: "form-control", type: "text"%>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :password, class:"col-sm-2 col-form-label" %><br />
      <div class="col-sm-10">
        <%= f.password_field :password, placeholder: "Enter password", class: "form-control", type: "text"%>
      </div>
    </div>
    <div class="form-group row">
      <%= f.submit(@user.new_record? ? "Sign up" : "Update account", class: 'col-sm-4 offset-sm-4 btn btn-primary btn-lg') %>
    </div>
  <% end %>
  <div class="row">
    <div class="col-sm-4 offset-sm-4">
      [ <%= link_to "Cancel request and return to articles listing", articles_path %> ]
    </div>
  </div>
</div>
