<h1 align="center">Create new category</h1>

<%= render 'shared/errors', obj:@category %>

<div class="articles-form">
  <%= form_for @category do |f| %>
    <div class="form-group row">
      <%= f.label :name, class:"col-sm-2 col-form-label" %><br />
      <div class="col-sm-10">
        <%= f.text_field :name, placeholder: "Enter name", autofocus: true, class: "form-control", type: "text"%>
      </div>
    </div>
    <div class="form-group row">
      <%= f.submit class: 'col-sm-4 offset-sm-4 btn btn-primary btn-lg' %>
    </div>
  <% end %>
  <div class="row">
    <div class="col-sm-4 offset-sm-4">
      [ <%= link_to "Cancel request and return to articles listing", articles_path %> ]
    </div>
  </div>
</div>
