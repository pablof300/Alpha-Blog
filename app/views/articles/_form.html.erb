<%= render 'shared/errors', obj:@article %>

<div class="articles-form">
  <%= form_for @article do |f| %>
    <div class="form-group row">
      <%= f.label :title, class:"col-sm-2 col-form-label" %><br />
      <div class="col-sm-10">
        <%= f.text_field :title, class: "form-control", type: "text"%>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :description, class:"col-sm-2 col-form-label" %><br />
      <div class="col-sm-10">
        <%= f.text_area :description, class: "form-control", type: "text"%>
      </div>
    </div>
    <div class="form-group row">
      <%= f.submit class: 'col-sm-4 offset-sm-4 btn btn-primary btn-lg' %>
    </div>
  <% end %>
  <div class="col-xs-4 offset-sm-4">
    [ <%= link_to "Cancel request and return to articles listing", articles_path %> ]
  </div>
</div>
